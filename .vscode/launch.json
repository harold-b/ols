    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach  (lldb)",
            "request": "attach",
            "type": "lldb",
            // "pid": "41845"
            "pid": "${command:pickMyProcess}", // use ${command:pickProcess} to pick other users' processes
            "initCommands": [
                "command source ${env:HOME}/.lldbinit"
            ]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug macOS (cppdbg)",
            "program": "${workspaceFolder}/ols",
            "args": [],
            "cwd": "${workspaceFolder}",
            // "preLaunchTask": "build",
            "osx": {
                "MIMode": "lldb"
            }
        }
    ]
}